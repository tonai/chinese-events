{
  "name": "chinese-events-capacitor",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "capacitor:icons": "capacitor-assets generate --assetPath '/dist/assets' --iconBackgroundColor '#ffffff' --iconBackgroundColorDark '#242424' --splashBackgroundColor '#ffffff' --splashBackgroundColorDark '#242424' --android",
    "capacitor:init": "cap add android",
    "capacitor:sync": "cap sync",
    "capacitor:open": "cap open android",
    "capacitor:run": "ANDROID_SDK_ROOT=/home/tocab/.bubblewrap/android_sdk cap run android",
    "capacitor:build": "ANDROID_HOME=/home/tocab/.bubblewrap/android_sdk cap build android --androidreleasetype=APK"
  },
  "dependencies": {
    "@capacitor/android": "^6",
    "@capacitor/core": "^6",
    "@mantine/core": "^7",
    "@mantine/hooks": "^7",
    "chinese-events-shared": "0.0.0",
    "date-chinese": "^2",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@capacitor/assets": "^3",
    "@capacitor/cli": "^6",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react-swc": "^3",
    "typescript": "^5",
    "vite": "^5",
    "vite-plugin-pwa": "^0"
  }
}
